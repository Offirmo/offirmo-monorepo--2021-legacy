	"scripts": {
		"heroku-prebuild": "echo This runs before Heroku nodjs buildback installs dependencies. Ensuring monorepo setup... && pwd && test -f Procfile && yarn global add bolt",
		"heroku-postbuild": "echo This runs after Heroku installs dependencies, but before Heroku prunes and caches dependencies. && pwd && ls -l && bolt",

		"clean": "bolt ws run clean && bolt ws exec -- rm -rf .cache .parcel dist node_modules yarn.lock package-lock.json yarn-error.log",
		"test": "bolt ws run test",
		"build": "bolt ws run build",
		"eslint:packages": "eslint '{1-stdlib,2-foundation,3-advanced--browser,3-advanced--isomorphic,3-advanced--multi,3-advanced--node,4-tools,5-incubator,9-oh-my-rpg,A-apps}/**/{src,doc}/**/*.{ts,tsx,js,jsx,json}'",
		"eslint:config": "eslint '**/{\\.eslintrc.js,\\.prettierrc.js,webpack.config.ts,*.json}'",
		"eslint:misc": "eslint '{0-meta,0-scripts,0-typings-custom}/**/*.{ts,tsx,js,jsx,json}'",
		"eslintxx": "eslint '5-incubator/**/{src,doc}/**/*.{ts,tsx,js,jsx,json}'",
		"lint": "run-s eslint:packages eslint:config eslint:misc",
		"serve": "serve --listen 1981 --debug",
		"puer": "puer --no-launch --port 1981 --allow-cors",

		"deploy": "./0-scripts/deploy_tbrpg.sh"
	},
	"bolt": {
		"workspaces": [
			"0-meta/*",
			"1-stdlib/*",
			"2-foundation/*",
			"3-advanced--browser/*",
			"3-advanced--isomorphic/*",
			"3-advanced--multi/*",
			"3-advanced--node/*",
			"4-tools/*",
			"5-incubator/active/*",
			"9-oh-my-rpg/*",
			"A-apps/online-adventur.es/*",
			"A-apps/the-boring-rpg/*",
