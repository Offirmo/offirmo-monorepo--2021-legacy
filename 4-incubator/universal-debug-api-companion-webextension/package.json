{
	"name": "@offirmo-private/universal-debug-api-companion-webextension",
	"description": "A FF & Chrome webextension to add debug features",
	"version": "0.0.1",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",
	"private": true,
	"devDependencies": {
		"@atlaskit/form": "^6",
		"@atlaskit/range": "^2",
		"@atlaskit/select": "^9",
		"@atlaskit/textfield": "^2",
		"@atlaskit/theme": "^9",
		"@atlaskit/toggle": "^7",
		"@babel/core": "^7",
		"@offirmo-private/react-error-boundary": "^0.0.1",
		"@offirmo-private/universal-debug-api-full-browser": "^0",
		"@offirmo-private/view-css": "^0.0.1",
		"@offirmo/practical-logger-core": "^1",
		"@offirmo/practical-logger-browser": "^1",
		"@offirmo/universal-debug-api-minimal-noop": "^0",
		"cross-env": "^5",
		"emittery": "^0.4",
		"npm-run-all": "^4",
		"parcel-bundler": "^1",
		"styled-components": "^3"
	},
	"scripts": {
		"clean": "node ../../scripts/clean.js dist cache",

		"dev:parcel": "parcel --no-autoinstall --port 8080 --no-hmr src/**/*.html src/background/background.js src/content-scripts/*.js",
		"dev:cpx": "cpx 'src/**/*.{json,png,svg}' dist --watch --verbose",

		"build:lib-bundle": "parcel build --no-autoinstall --no-source-maps --out-file injected-api-bundle.js  src/universal-debug-api-from-webext/index.ts",
		"build:encode-injectable-lib": "node ./scripts/encode.js",
		"build:refresh-injectable-lib": "run-s  build:lib-bundle  build:encode-injectable-lib",

		"build:parcel": "parcel build --no-minify src/**/*.html src/background/background.js src/content-scripts/*.js --public-url ./",
		"build:cpx": "cpx 'src/**/*.{json,png,svg}' dist",
		"build:extension": "run-s  build:refresh-injectable-lib  build:parcel  build:cpx",

		"dev": "npm-run-all  clean  build:refresh-injectable-lib  --parallel dev:parcel dev:cpx",
		"build": "run-s clean build:extension",
		"demo": "parcel doc/demo/index.html"
	}
}
