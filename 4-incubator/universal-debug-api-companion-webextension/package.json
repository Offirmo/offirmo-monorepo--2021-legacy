{
	"name": "@offirmo-private/universal-debug-api-companion-webextension",
	"description": "A FF & Chrome webextension to add debug features",
	"version": "0.0.8",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",
	"private": true,
	"devDependencies": {
		"@atlaskit/form": "^6",
		"@atlaskit/range": "^2",
		"@atlaskit/select": "^9",
		"@atlaskit/textfield": "^2",
		"@atlaskit/theme": "^9",
		"@atlaskit/toggle": "^7",
		"@babel/core": "^7",
		"@offirmo-private/react-error-boundary": "^0.0.1",
		"@offirmo-private/universal-debug-api-full-browser": "^0",
		"@offirmo-private/view-css": "^0.0.1",
		"@offirmo/practical-logger-core": "^1",
		"@offirmo/practical-logger-browser": "^1",
		"@offirmo/universal-debug-api-minimal-noop": "^0",
		"cross-env": "^5",
		"npm-run-all": "^4",
		"parcel-bundler": "^1",
		"styled-components": "^3"
	},
	"scripts": {
		"clean": "node ../../scripts/clean.js dist cache",
		"dev:parcel": "parcel --no-autoinstall --port 8080 --no-hmr src/**/*.html src/background/background.js src/content-scripts/*.js",
		"dev:cpx": "cpx 'src/**/*.{json,png,svg}' dist --watch --verbose",
		"build:parcel": "parcel build --no-minify src/**/*.html --public-url ./",
		"build:update-encoded-full-api": "node ./scripts/encode.js",
		"build:extension": "run-s  build:update-encoded-full-api  build:parcel",
		"dev": "npm-run-all clean --parallel dev:parcel dev:cpx",
		"build": "npm version patch && run-s build:extension",
		"demo": "parcel doc/demo/index.html"
	}
}
