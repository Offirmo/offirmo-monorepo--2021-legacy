{
	"name": "@offirmo/universal-debug-extension",
	"description": "A FF & Chrome webextension to add debug features",
	"version": "0.0.1",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"private": true,
	"license": "Unlicense",

	"devDependencies": {
		"@offirmo/view-css": "^0.0.1",
		"@babel/core": "^7",
		"cross-env": "^5",
		"npm-run-all": "^4",
		"parcel-bundler": "^1"
	},
	"scripts": {
		"clean": "node ../../scripts/clean.js dist cache",

		"dev:parcel": "parcel --no-autoinstall --port 8080 --no-hmr src/**/*.html src/background/background.js src/content-scripts/*.js",
		"dev:cpx": "cpx 'src/**/*.{json,png}' dist --watch --verbose",
		"dev": "npm-run-all clean --parallel dev:parcel dev:cpx",

		"build:parcel": "parcel build --no-minify src/**/*.html --public-url ./",
		"build": "npm version patch && run-s clean build:parcel"
	}
}
