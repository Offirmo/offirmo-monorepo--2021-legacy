{
	"name": "@offirmo/practical-logger-browser",
	"description": "Browser implementation of Offirmoâ€™s practical logger",
	"version": "2.1.0",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",

	"esnext": "dist/src.es2019/index.js",
	"module": "dist/src.es2019/index.js",
	"main": "dist/src.es2018.cjs/index.js",
	"typings": "dist/src.es2018.cjs/index.d.ts",
	"source": "src/index.ts",
	"sideEffects": false,

	"size-limit": [
		{
			"limit": "3kb",
			"path": "dist/src.es2019/index.js"
		},
		{
			"limit": "3kb",
			"path": "dist/src.es2018.cjs/index.js"
		}
	],

	"peerDependencies": {},
	"dependencies": {
		"@offirmo/practical-logger-core": "^2",
		"@offirmo/practical-logger-types": "^2",
		"@offirmo/tiny-singleton": "^0"
	},

	"devDependencies": {
		"@babel/core": "^7",
		"@size-limit/preset-small-lib": "^2",
		"np": "^5",
		"npm-run-all": "^4",
		"parcel-bundler": "^1"
	},
	"scripts": {
		"clean": "node ../../scripts/clean.js dist",

		"test": "../../node_modules/.bin/mocha --opts ../../3-tools/unit-test-toolbox/mocha.opts ../../3-tools/unit-test-toolbox/mocha-chai-init-node.js 'dist/src.es2018.cjs/**/*spec.js'",
		"build:dev:watch": "node ../../scripts/build-typescript.js --watch",
		"build:prod": "node ../../scripts/build-typescript.js",
		"build:bundle": "parcel build --no-autoinstall --no-source-maps --out-file index-bundle.js  src/index.ts",
		"ensure-size": "size-limit",

		"dev": "run-s clean build:dev:watch",
		"build": "run-s build:prod",
		"cheatsheet": "node doc/cheatsheet.js",
		"demo": "parcel --out-dir .parcel --no-autoinstall doc/demo/index.html",

		"np": "np --no-publish",
		"prepublishOnly": "run-s clean build:prod test ensure-size"
	},

	"files": [
		"dist",
		"src"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Offirmo/offirmo-monorepo.git"
	},
	"keywords": [
		"logger",
		"typescript"
	],
	"homepage": "https://github.com/Offirmo/offirmo-monorepo/tree/master/1-foundation/practical-logger-browser"
}
