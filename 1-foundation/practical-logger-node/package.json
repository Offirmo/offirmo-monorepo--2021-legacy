{
	"name": "@offirmo-private/practical-logger-node",
	"description": "node-specific practical logger",
	"version": "0.0.1",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",
	"private": true,

	"esnext": "dist/src.es9/index.js",
	"module": "dist/src.es9/index.js",
	"main": "dist/src.es9.cjs/index.js",
	"typings": "dist/src.es9.cjs/index.d.ts",
	"source": "src/index.ts",
	"sideEffects": false,

	"size-limit": [
		{
			"limit": "1.5kb",
			"path": "dist/src.es9.cjs/index.js"
		}
	],

	"peerDependencies": {
	},
	"dependencies": {
		"@offirmo/practical-logger-core": "^0",
		"@offirmo/practical-logger-interface": "^0",
		"@offirmo-private/prettify-json": "^0.0.1",
		"@offirmo-private/print-error-to-ansi": "^0.0.1",
		"chalk": "^2",
		"indent-string": "^3",
		"tslib": "^1"
	},

	"devDependencies": {
		"@types/node": "^10",
		"npm-run-all": "^4",
		"size-limit": "^1"
	},
	"scripts": {
		"clean": "node ../../scripts/clean.js dist",

		"build:dev:watch": "node ../../scripts/build-typescript.js --watch",
		"build:prod": "node ../../scripts/build-typescript.js",
		"ensure-size": "size-limit",

		"dev": "run-s clean build:dev:watch",
		"build": "run-s build:prod",
		"cheatsheet": "node doc/cheatsheet.js",
		"demo": "node doc/demo.js",

		"prepublishOnly": "run-s clean build:prod ensure-size"
	},

	"files": [
		"dist",
		"src"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Offirmo/offirmo-monorepo.git"
	},
	"keywords": [
		"logger",
		"typescript"
	],
	"homepage": "https://github.com/Offirmo/offirmo-monorepo/tree/master/1-foundation/practical-logger-node"
}
