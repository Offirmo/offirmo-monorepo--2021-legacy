{
	"name": "@offirmo-private/universal-debug-api-browser",
	"description": "An implementation.",
	"version": "0.0.1",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",
	"private": true,

	"esnext": "dist/src.es2019/index.js",
	"module": "dist/src.es2019/index.js",
	"main": "dist/src.es2018.cjs/index.js",
	"typings": "dist/src.es2018.cjs/index.d.ts",
	"source": "src/index.ts",
	"sideEffects": true,

	"size-limit": [
	{
		"limit": "5kb",
		"path": "dist/src.es2019/index.js"
	},
	{
		"limit": "7kb",
		"path": "dist/src.es2018.cjs/index.js"
	},
	{
		"limit": "5kb",
		"path": "dist/index-bundle.js"
	}
],

	"peerDependencies": {
	},
	"dependencies": {
		"@offirmo/globalthis-ponyfill": "^1.0.2",
		"@offirmo/practical-logger-browser": "^1.1.1",
		"@offirmo/practical-logger-core": "^2",
		"@offirmo/universal-debug-api-interface": "^0.1.1"
	},

	"devDependencies": {
		"@babel/core": "^7",
		"@size-limit/preset-small-lib": "^2",
		"npm-run-all": "^4"
	},
	"scripts": {
		"clean": "node ../../scripts/clean.js dist",

		"build:dev:watch": "node ../../scripts/build-typescript.js --watch",
		"build:prod": "node ../../scripts/build-typescript.js",
		"build:bundle": "parcel build --no-autoinstall --no-source-maps --out-file index-bundle.js  src/index.ts",
		"ensure-size": "size-limit",

		"dev": "run-s clean build:dev:watch",
		"build": "npm-run-all --parallel build:prod build:bundle",
		"demo": "parcel --out-dir .parcel --no-autoinstall doc/demo/index.html",

		"np": "np --no-publish",
		"prepublishOnly": "run-s clean build:prod ensure-size"
	}
}
