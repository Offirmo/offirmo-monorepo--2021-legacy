{
	"name": "@offirmo-private/view-css",
	"version": "0.0.1",
	"private": true,
	"description": "Small reusable CSS classes",
	"license": "Unlicense",
	"scripts": {
		"clean": "node ../../scripts/clean.js dist cache",
		"start:parcel": "parcel --out-dir .parcel --no-autoinstall doc/demo/index.html doc/demo/index-iframe-advanced.html doc/demo/index-iframe-base.html doc/demo/index-iframe-controls.html doc/demo/index-iframe-fonts.html doc/demo/index-iframe-rpg-elements.html",
		"demo": "run-s clean start:parcel",

		"build:copy": "mkdir -p dist && cpx 'src/**/*.woff2' dist --verbose",
		"build:cleancss": "mkdir -p dist && cleancss --skip-rebase --output dist/offirmo-reset+utils.css src/style.css",
		"build": "npm-run-all --parallel build:copy build:cleancss"
	},
	"dependencies": {
		"typeface-roboto": "^0.0.54",
		"typeface-roboto-condensed": "^0.0.54",
		"typeface-roboto-mono": "^0.0.54"
	},
	"devDependencies": {
		"clean-css-cli": "^4",
		"cpx": "^1",
		"normalize.css": "^8",
		"npm-run-all": "^4"
	}
}
