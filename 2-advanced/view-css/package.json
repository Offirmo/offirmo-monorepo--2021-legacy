{
	"name": "@offirmo/view-css",
	"version": "0.0.1",
	"private": true,
	"description": "Small reusable CSS classes",
	"license": "UNLICENSED",
	"devDependencies": {
		"clean-css-cli": "^4.1.10",
		"cpx": "^1.3.2",
		"normalize.css": "^8.0.0",
		"npm-run-all": "^4.1.2"
	},
	"scripts": {
		"clean": "rm -rf dist && mkdir dist",
		"build:copy": "cpx 'src/**/*.woff2' dist --verbose",
		"build:cleancss": "cleancss --skip-rebase -o dist/offirmo-reset+utils.css src/style.css",
		"build": "npm-run-all clean --parallel build:copy build:cleancss"
	}
}
