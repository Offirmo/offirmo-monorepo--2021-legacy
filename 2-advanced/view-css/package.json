{
	"name": "@offirmo/view-css",
	"version": "0.0.1",
	"private": true,
	"description": "Small reusable CSS classes",
	"license": "UNLICENSED",
	"devDependencies": {
		"clean-css-cli": "^4",
		"cpx": "^1",
		"normalize.css": "^8",
		"npm-run-all": "^4"
	},
	"scripts": {
		"clean": "rm -rf dist .cache && mkdir dist",
		"start:parcel": "parcel doc/demo/index.html doc/demo/index-iframe-base.html doc/demo/index-iframe-fonts.html doc/demo/index-iframe-advanced.html doc/demo/index-iframe-controls.html",
		"demo": "run-s clean start:parcel",

		"build:copy": "cpx 'src/**/*.woff2' dist --verbose",
		"build:cleancss": "cleancss --skip-rebase -o dist/offirmo-reset+utils.css src/style.css",
		"build": "npm-run-all clean --parallel build:copy build:cleancss"
	}
}
