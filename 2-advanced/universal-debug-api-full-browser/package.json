{
	"name": "@offirmo-private/universal-debug-api-full-browser",
	"description": "An implementation.",
	"version": "0.0.1",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",
	"private": true,

	"esnext": "dist/src.es7/index.js",
	"module": "dist/src.es7/index.js",
	"main": "dist/src.es7.cjs/index.js",
	"typings": "dist/src.es7.cjs/index.d.ts",
	"source": "src/index.ts",
	"sideEffects": true,

	"peerDependencies": {
		"tslib": "^1"
	},
	"dependencies": {
		"@offirmo/globalthis-ponyfill": "^0.0.3",
		"@offirmo-private/practical-logger-browser": "^0.0.1",
		"@offirmo-private/universal-debug-api-interface": "^0.0.1",
		"@atlassian/log-experiment-to-console-browser": "^0.0.1"
	},

	"devDependencies": {
		"@babel/core": "~7.3",
		"@offirmo-private/practical-logger-core": "^0.0.1",
		"npm-run-all": "^4"
	},
	"scripts": {
		"clean": "node ../../scripts/clean.js dist",

		"build:dev:watch": "node ../../scripts/build-typescript.js --watch",
		"build:prod": "node ../../scripts/build-typescript.js",
		"build:bundle": "parcel build --no-autoinstall --no-source-maps --out-file index-bundle.js  src/index.ts",

		"dev": "run-s clean build:dev:watch",
		"build": "npm-run-all --parallel build:prod build:bundle",
		"demo": "parcel --out-dir .parcel --no-autoinstall doc/demo/index.html"
	}
}
