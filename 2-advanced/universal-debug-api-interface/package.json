{
	"name": "@offirmo/universal-debug-api-interface",
	"description": "TypeScript types for a universal debug API (no code)",
	"version": "0.1.1",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",

	"esnext": "dist/src.es2019/index.js",
	"module": "dist/src.es2019/index.js",
	"main": "dist/src.es2018.cjs/index.js",
	"typings": "dist/src.es2018.cjs/index.d.ts",
	"source": "src/index.ts",
	"sideEffects": false,

	"size-limit": [
		{
			"limit": "100b",
			"path": "dist/src.es2019/index.js"
		},
		{
			"limit": "100b",
			"path": "dist/src.es2018.cjs/index.js"
		}
	],

	"peerDependencies": {
	},
	"dependencies": {
		"@offirmo/practical-logger-types": "^1.1.1"
	},

	"devDependencies": {
		"@size-limit/preset-small-lib": "^2",
		"npm-run-all": "^4"
	},
	"scripts": {
		"clean": "node ../../scripts/clean.js dist",

		"build:dev:watch": "node ../../scripts/build-typescript.js --watch",
		"build:prod": "node ../../scripts/build-typescript.js",
		"ensure-size": "size-limit",

		"dev": "run-s clean build:dev:watch",
		"build": "run-s build:prod",

		"np": "np --no-publish",
		"prepublishOnly": "run-s clean build:prod ensure-size"
	},

	"files": [
		"dist",
		"src"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Offirmo/offirmo-monorepo.git"
	},
	"keywords": [
		"logger",
		"debug",
		"typescript"
	],
	"homepage": "https://github.com/Offirmo/offirmo-monorepo/tree/master/2-advanced/universal-debug-api-interface"
}
