{
	"name": "@offirmo/globalthis-ponyfill",
	"description": "Ponyfill for globalThis",
	"version": "3.0.2",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",

	"type": "module",
	"esnext": "dist/src.es2021/index.js",
	"module": "dist/src.es2021/index.js",
	"main": "dist/src.es2021.cjs/index.js",
	"typings": "dist/src.es2021.cjs/index.d.ts",
	"source": "src/index.ts",
	"sideEffects": false,

	"size-limit": [
		{
			"limit": "200B",
			"path": "dist/src.es2021/index.js"
		},
		{
			"limit": "200B",
			"path": "dist/src.es2021.cjs/index.js"
		}
	],

	"peerDependencies": {
	},
	"dependencies": {
	},

	"scripts": {
		"clean": "monorepo-script--clean-package â€¦dist",

		"build:dev:watch": "monorepo-script--build-typescript-package --watch",
		"build:prod": "monorepo-script--build-typescript-package",
		"ensure-size": "size-limit",

		"dev": "run-s clean build:dev:watch",
		"test": "mocha --bail --config ../../node_modules/@offirmo/unit-test-toolbox/mocharc.json ../../node_modules/@offirmo/unit-test-toolbox/mocha-chai-init-node.js 'dist/src.es2021.cjs/**/*spec.js'",
		"build": "run-s clean build:prod",

		"prepublishOnly": "run-s build ensure-size"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^7",
		"npm-run-all": "^4",
		"size-limit": "^7"
	},

	"files": [
		"dist",
		"src"
	],
	"repository": "https://github.com/Offirmo/offirmo-monorepo/tree/master/1-stdlib/globalthis-ponyfill",
	"keywords": [
		"globalThis",
