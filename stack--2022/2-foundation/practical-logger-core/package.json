{
	"name": "@offirmo/practical-logger-core",
	"description": "Common internal code for Offirmo’s practical logger",
	"version": "3.1.0",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",

	"esnext": "dist/src.es2021/index.js",
	"module": "dist/src.es2021/index.js",
	"main": "dist/src.es2021.cjs/index.js",
	"typings": "dist/src.es2021.cjs/index.d.ts",
	"source": "src/index.ts",
	"sideEffects": false,

	"size-limit": [
		{
			"limit": "1.5kb",
			"path": "dist/src.es2021/index.js"
		},
		{
			"limit": "1.5kb",
			"path": "dist/src.es2021.cjs/index.js"
		}
	],

	"peerDependencies": {
	},
	"dependencies": {
		"@offirmo/practical-logger-types": "^3"
	},

	"scripts": {
		"clean": "monorepo-script--clean-package …dist",

		"build:dev:watch": "monorepo-script--build-typescript-package --watch",
		"build:prod": "monorepo-script--build-typescript-package",
		"ensure-size": "size-limit",

		"dev": "run-s clean build:dev:watch",
		"test": "./node_modules/.bin/mocha --bail --config ./node_modules/@offirmo/unit-test-toolbox/mocharc.json ./node_modules/@offirmo/unit-test-toolbox/mocha-chai-init-node.js 'dist/src.es2021.cjs/**/*spec.js'",
		"build": "run-s build:prod",
		"cheatsheet": "node doc/cheatsheet.js",
		"demo": "node doc/demo.js",

		"np": "np --no-publish",
		"prepublishOnly": "run-s clean build test ensure-size"
	},
	"devDependencies": {
		"@offirmo/error-utils": "^0",
		"@offirmo/unit-test-toolbox": "^8",
		"@size-limit/preset-small-lib": "^5",
		"np": "^7",
		"npm-run-all": "^4",
		"size-limit": "^5"
	},

	"files": [
		"dist",
		"src"
	],
	"repository": "https://github.com/Offirmo/offirmo-monorepo/tree/master/2-foundation/practical-logger-core",
	"keywords": [
		"logger",
		"typescript"
	],
	"homepage": "https://github.com/Offirmo/offirmo-monorepo/tree/master/2-foundation/practical-logger-core",
	"bugs": {
		"url": "https://github.com/Offirmo/offirmo-monorepo/issues"
	}
}
